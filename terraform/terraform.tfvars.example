# =============================================================================
# Terraform Configuration Example
# =============================================================================
# Copy this file to terraform.tfvars and modify as needed
# =============================================================================

# Project Configuration
project_name = "hypervisor"
environment  = "dev"
region       = "us-west-2"
zones        = ["us-west-2a", "us-west-2b", "us-west-2c"]

# Network Configuration
vpc_cidr = "10.0.0.0/16"
subnet_cidrs = {
  control_plane = "10.0.1.0/24"
  compute       = "10.0.2.0/24"
  storage       = "10.0.3.0/24"
}
enable_nat_gateway = true

# Cluster Configuration
etcd_cluster_size = 3
server_count      = 2
agent_count       = 3

agent_instance_types = ["vm", "container", "microvm"]

# Instance Specifications
instance_specs = {
  etcd = {
    instance_type = "t3.medium"
    disk_size_gb  = 50
    disk_type     = "gp3"
  }
  server = {
    instance_type = "t3.large"
    disk_size_gb  = 100
    disk_type     = "gp3"
  }
  agent = {
    instance_type = "m5.2xlarge"
    disk_size_gb  = 500
    disk_type     = "gp3"
  }
}

# Version Configuration
hypervisor_version = "latest"
etcd_version       = "v3.5.9"

# SSH Configuration
# ssh_public_key = "ssh-rsa AAAA..."
# ssh_key_name   = "my-key-pair"

# TLS Configuration
tls_enabled = false

# Logging
log_level = "info"

# Monitoring
enable_monitoring = false

# Common Tags
common_tags = {
  Project   = "Hypervisor"
  ManagedBy = "Terraform"
  Owner     = "Platform Team"
}
